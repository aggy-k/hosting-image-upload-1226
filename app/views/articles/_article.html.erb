<div id="<%= dom_id article %>">
  <p>
    <strong>Title:</strong>
    <%= article.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= article.body %>
  </p>

  <% if article.photo.attached? %>
    <div>
      <%= cl_image_tag article.photo.key, height: 300, width: 400, crop: :fill %>
    </div>
  <% end %>

  <% if article.photos.attached? %>
    <% article.photos.each do |photo| %>
      <div>
        <%#= cl_image_tag article.photo.key, height: 300, width: 400, crop: :fill %>
        <%= image_tag photo, style: "height: 300px; width: 400px;" %>
      </div>
    
    <% end %>
    
  <% end %>



</div>
